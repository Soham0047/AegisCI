# SecureDev Guardian - Environment Configuration
# Copy this file to .env and update the values

# ============================================
# Application Settings
# ============================================
APP_ENV=development
# Options: development, staging, production
DEBUG=true
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# Backend API Settings
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
# For production, set to number of CPU cores

# Database paths (SQLite for development)
SQLITE_PATH=backend/data/app.db
JOBS_DB_PATH=backend/data/jobs.db
GATEWAY_EVENTS_DB_PATH=backend/data/gateway_events.db
CONFIG_DB_PATH=backend/data/config.db
OUTCOMES_DB_PATH=backend/data/outcomes.db

# ============================================
# Frontend Settings
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_GATEWAY_URL=http://localhost:9000

# ============================================
# Gateway Settings
# ============================================
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=9000
GATEWAY_POLICY_PATH=gateway/policy.yaml

# ============================================
# Redis / Celery (for background jobs)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# LLM Provider Settings (for Patch Copilot)
# ============================================
# Options: local, openai, gemini
LLM_PROVIDER=local

# OpenAI (if LLM_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Gemini (if LLM_PROVIDER=gemini)
GEMINI_API_KEY=

# Local model path (if LLM_PROVIDER=local)
LOCAL_MODEL_PATH=artifacts/patch_model

# ============================================
# Security Settings
# ============================================
# Secret key for session signing (generate with: openssl rand -hex 32)
SECRET_KEY=change-me-in-production

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# ============================================
# GitHub Integration (optional)
# ============================================
GITHUB_TOKEN=
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY_PATH=

# ============================================
# Docker / Production
# ============================================
# For production deployments
DATABASE_URL=sqlite:///backend/data/app.db
# For PostgreSQL: postgresql://user:pass@host:5432/dbname
